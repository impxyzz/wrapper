{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "src",
		// Don't emit; allow Babel to transform files.
		"noEmit": false,
		"noUnusedLocals": true,
		"strict": true,
		"experimentalDecorators": true,
		"outDir": "scripts",
		"removeComments": true
	},
	"include": ["*.d.ts", "src_ts/**/*.ts"],
	"compileOnSave": true
}
