{
	"defaultSeverity": "error",
	"extends": [
		"tslint:latest"
	],
	"jsRules": {},
	"rules": {
		"semicolon": "never",
		"no-trailing-whitespace": true,
		"indent": ["tabs", 1],
		"curly": "as-needed",
		"arrow-parens": "ban-single-arg-parens",
		"max-line-length": false,
		"object-literal-sort-keys": false,
		"one-variable-per-declaration": false,
		"no-var-keyword": false,
		"no-console": false,
		"no-bitwise": false,
		"radix": false,
		"prefer-const": false,
		"variable-name": [
			"check-format",
			"allow-trailing-underscore",
			"allow-pascal-case",
			"allow-snake-case",
			"ban-keywords"
		]
	},
	"rulesDirectory": [],
	"linterOptions": {
		"exclude": ["**/node_modules/**"]
	}
}